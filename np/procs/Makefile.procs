# include configuration and all makefile macro definitions
include $(UGROOT)/ug.conf

OBJECTS = nls.o ls.o assemble.o basics.o iter.o transfer.o error.o

# local C compiler flags
LCFLAGS = -I $(UGROOT)/include

all : $(OBJECTS) Makefile.procs
	$(ARCH_AR)  $(ARCH_ARFLAGS) $(UGROOT)/lib/libug$(UG_LIBSUFFIX).a $(OBJECTS)

.SUFFIXES: .o .c

.c.o:
	$(ARCH_CC) $(UG_CFLAGS) $(LCFLAGS) $<

clean:
	rm -f *.o

extract:
	$(ARCH_AR) $(ARCH_EXFLAGS) $(UGROOT)/lib/libug$(UG_LIBSUFFIX).a $(OBJECTS)

xmc: extract all clean
