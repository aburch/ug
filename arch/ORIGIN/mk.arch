#
#	ARCH MAKEFILE OPTIONS
#
#	for SGI Workstations
#

ARCH_TYPE     = __SGI__

ARCH_CC       = cc
ARCH_C++      = DCC
ARCH_LINK     = cc
ARCH_AR       = ar
ARCH_SUFFIX   = 
ARCH_POSTLINK = true

ARCH_LIBS     = -lm
ARCH_PLIBS    =


# add -mips2 for invoking R4000 specific extensions
ARCH_CFLAGS   = -mips2 -O # -g -O2
ARCH_C++FLAGS = -mips2 -O # -g -O2
ARCH_LFLAGS   = -mips2
ARCH_ARFLAGS  = ru

ARCH_XINCLUDES =
ARCH_XLIBS     = -lX11 -lXt -lXaw -lXmu -lXext

