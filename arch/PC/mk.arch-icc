#
#	ARCH MAKEFILE OPTIONS
#
#	for Linux-PC (with icc)
#

ARCH_TYPE     = __PC__

ARCH_MAKE     = make
ARCH_CC       = icc
ARCH_C++      = icpc
ARCH_LINK     = icc
ARCH_AR       = ar
ARCH_SUFFIX   = 
ARCH_POSTLINK = true

ARCH_LIBS     = -lm

ARCH_CFLAGS   = 
ARCH_NOOPTIM  = -g 
ARCH_OPTIM    = -O2 -tpp6 -xi -ip
ARCH_C++FLAGS = 
ARCH_LFLAGS   =
ARCH_ARFLAGS  = rus

ARCH_XINCLUDES = -I/usr/X11R6/include
ARCH_XLIBS     = -L/usr/X11R6/lib -lXaw -lXt -lX11
