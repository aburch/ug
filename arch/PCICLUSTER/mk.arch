#
#	ARCH MAKEFILE OPTIONS
#
#	for Cluster of PCs with Linux (with ICC)
#	

ARCH_TYPE     = __PC__

ARCH_MAKE     = make
ARCH_CC       = mpicc
ARCH_C++      = mpiCC
ARCH_LINK     = mpicc
ARCH_AR       = ar
ARCH_SUFFIX   = 
ARCH_POSTLINK = true

ARCH_LIBS     = -lm

ARCH_CFLAGS   = 
ARCH_NOOPTIM  = -g 
ARCH_OPTIM    = -O3 -march=i686
ARCH_C++FLAGS = -fpermissive
ARCH_LFLAGS   =
ARCH_ARFLAGS  = rus

ARCH_XINCLUDES =
ARCH_XLIBS     = -L/usr/X11R6/lib -lXaw3d -lXt -lX11
