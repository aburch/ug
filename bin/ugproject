#!/bin/sh
# ugproject
# set -e to stop after the first error; otherwise you may miss errors.
set -e
ugclean
ugconf save

ugconf 2
ugmake ug uglib
ugmake dev
ugmake dom

ugmake simple
ugmake diff2da
ugmake ns2da 
ugmake fema nd
ugmake cda 
ugmake fema ifdef
ugmake fema ed

ugconf 3
ugmake ug -i ifdef
ugmake ug uglib
ugmake dom

ugmake cda ifdef
ugmake cda 

ugconf restore
ugmake ug -i ifdef
echo "simple, diff2da, ns2da, cd2d, cd3d, fema, femn created"
