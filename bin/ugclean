#!/bin/sh
if test $# -ge 2 -o "$1" = "-help"
then
    echo "usage: $0 [all]";
    echo "purpose: clean source code [and ug libraries]";
    echo "Options are";
	echo " all: clean all ug libraries, too";
    exit 1;
fi

if test "x$UGROOT" = "x"
then
    echo "$0: to use $0 set shell environment variable UGROOT!";
    exit 1;
fi

ugmake ug -i clean
ugmake simple -i clean
ugmake diff2d -i clean
ugmake diff2da -i clean
ugmake cda -i clean
ugmake fema -i clean
ugmake ns2d -i clean
ugmake ns2da -i clean
ugmake tools -i clean

if test "$1" = "all"
then
	rm -f $UGROOT/lib/*.a
	rm -f -r $UGROOT/include
fi

