#!/usr/bin/perl -w

@ARGV==3 or die "usage: lgm2dto3d <geometry> <yf> <yb>\n";
$real='[+-]*\d+\.*\d*e[+-]\d+|[+-]*\d+\.\d*|\d+';

# admin
$yf=$ARGV[1]; $yb=$ARGV[2];
$yf>$yb or die "ERROR: $yb >= $yf\n";

# functions
sub min
{
    $min_min=1000000;
    for ($min_i=0; $min_i<@_; $min_i++) {if ($min_min>$_[$min_i]) {$min_min=$_[$min_i];}}
    return ($min_min);
}
sub max
{
    $max_max=-100000000;
    for ($max_i=0; $max_i<@_; $max_i++) {if ($max_max<$_[$max_i]) {$max_max=$_[$max_i];}}
    return ($max_max);
}
sub getline
{
	for ($getline_i=0; $getline_i<$l; $getline_i++)
	{
		if ($lp[0][$getline_i][0]==$_[0] && $lp[0][$getline_i][1]==$_[1])
		{
			return($getline_i);	
		}
		if ($lp[0][$getline_i][0]==$_[1] && $lp[0][$getline_i][1]==$_[0])
		{
			return($getline_i);	
		}
	}
	die "ERROR: cannot get line ($_[0],$_[1])\n";
}

# check dimension
open(IN,$ARGV[0]);
while($line=<IN>)
{
	if ($line=~/surface/)
	{
		die "ERROR: specified geometry is 3d\n";
		last;
	}
}
close(IN);

# admin
open(IN,$ARGV[0]);
$sd_min=1000000; $sd_max=-1;

# write header
while($line=<IN>)
{
	print $line;
	if ($line=~/Line-Info/) {last;}
}

# get lines
$l=0;
while($line=<IN>)
{
	if ($line=~/points:/)
	{
		$n[$l]=0;
		if (!($line=~/left=(\d+);\s*right=(\d+)/)) {die "ERROR: cannot read left/right info\n";}
		$left[$l]=$1; $right[$l]=$2;
		if ($left[$l]==$right[$l]) {die "ERROR: line $l references subdomain $right[$l] on both sides\n";}
		$sd_max=max($sd_max,$1,$2);
		$sd_min=min($sd_min,$1,$2);
		$line=~s/line\s*\d+:\s*left=\d+;\s*right=\d+;\s*points:\s*//g;
		while(1)
		{
			if ($line=~/(\d+)\s*/)
			{
				$lp[0][$l][$n[$l]++]=$1;			
				$line=~s/\d+\s*//;
			}
			else
			{
				last;
			}
		}
		for ($i=0; $i<$n[$l]; $i++) {$lp[1][$l][$i]=$lp[0][$l][$n[$l]-$i-1];}
		$l++;
	}
	if ($line=~/Point-Info/) {last;}
}
$sd_min==0 or die "ERROR: subdomain 0 not referenced\n";
$sd_max>=0 or die "ERROR: #subdomains==0\n";

# write lines
$np=0;
for ($i=0; $i<$l; $i++)
{
	print "line $i: points:";
	for ($j=0; $j<$n[$i]; $j++)
	{
		print " $lp[0][$i][$j]";
		$np=max($np,$lp[0][$i][$j]);
	}
	print ";\n";
}
$np++;
for ($i=0; $i<$l; $i++)
{
	$tmp=$i+$l;
    print "line $tmp: points:";
    for ($j=0; $j<$n[$i]; $j++)
    {
		$tmp=$lp[0][$i][$j]+$np;
        print " $tmp";
    }
    print ";\n";
}

# get points
$m=0;
while($line=<IN>)
{
	if ($line=~/\s*($real)\s+($real)/)
	{
		$p[$m][0]=$1; $p[$m][1]=$2; 
		$m++;
	}
}
close(IN);
if ($m!=$np) {print "ERROR: pointreferences inconsisten\n";}

# write further lines
for ($i=0; $i<$np; $i++)
{
	$tmp=$i+2*$l;
	print "line $tmp: points: ";
	$tmp=$i+$np;
	print "$i $tmp;\n";
}

# write surfaces according to 2d-subdomains
print "\n#Surface-Info\n";
$surf=0;
for ($i=1; $i<=$sd_max; $i++)
{
	$m1=0;
	for ($j=0; $j<$l; $j++)
    {
		$r1[$m1]=-1;
        if ($left[$j]==$i) {$r1[$m1]=0;}
        if ($right[$j]==$i) {$r1[$m1]=1;}
		if ($r1[$m1]==-1) {next;}
		$line1[$m1++]=$j; 
	}
	$m=$m1;
	$line2[0]=$line1[0]; $r2[0]=$r1[0];
	for ($m2=1; $m2<$m; $m2++)
	{
		for ($m1=0; $m1<$m; $m1++)
		{
			if ($lp[$r2[$m2-1]][$line2[$m2-1]][$n[$line2[$m2-1]]-1]==$lp[$r1[$m1]][$line1[$m1]][0])
			{
				$line2[$m2]=$line1[$m1];
				$r2[$m2]=$r1[$m1];
			}
		}
	}

	print "surface $surf: left=0; right=$i; points:";
	$m1=0;
	for ($m2=0; $m2<$m; $m2++)
	{
		for ($j=0; $j<$n[$line2[$m2]]-1; $j++)
		{
			print " $lp[$r2[$m2]][$line2[$m2]][$j]";
			$p_surf[$m1++]=$lp[$r2[$m2]][$line2[$m2]][$j];
		}
	}
	print "; lines:";
	for ($m2=0; $m2<$m; $m2++)
	{
		print " $line2[$m2]";
	}
	print "; triangles:";
	for ($m2=1; $m2<$m1-1; $m2++)
	{
		print " $p_surf[0] $p_surf[$m2] $p_surf[$m2+1];";
	}
	print "\n";
	$surf++;

    print "surface $surf: left=$i; right=0; points:";
    $m1=0;
    for ($m2=0; $m2<$m; $m2++)
    {
        for ($j=0; $j<$n[$line2[$m2]]-1; $j++)
        {
			$tmp=$lp[$r2[$m2]][$line2[$m2]][$j]+$np;
            print " $tmp";
            $p_surf[$m1++]=$tmp;
        }
    }
    print "; lines:";
    for ($m2=0; $m2<$m; $m2++)
    {
		$tmp=$line2[$m2]+$l;
        print " $tmp";
    }
    print "; triangles:";
    for ($m2=1; $m2<$m1-1; $m2++)
    {
        print " $p_surf[0] $p_surf[$m2] $p_surf[$m2+1];";
    }
    print "\n";
	$surf++;
}


# connecting surfaces
for ($i=0; $i<$l; $i++)
{
    for ($j=0; $j<$n[$i]-1; $j++)
    {
		$p1=$lp[0][$i][$j]; $p2=$lp[0][$i][$j+1]; $p3=$p2+$np; $p4=$p1+$np;
		print "surface $surf: left=$left[$i]; right=$right[$i]; points: $p1 $p2 $p3 $p4; lines: ";
		$l1=2*$l+$p1; $l2=2*$l+$p2; $l3=getline($p1,$p2); $l4=$l+$l3;
		print "$l1 $l2 $l3 $l4; triangles: ";
		print "$p1 $p2 $p3; $p1 $p3 $p4;";
		$surf++;
    }
	print "\n";
}

# write points
print "\n#Point-Info\n";
for ($i=0; $i<$np; $i++) {print "$p[$i][0] $yb $p[$i][1];\n";}
for ($i=0; $i<$np; $i++) {print "$p[$i][0] $yf $p[$i][1];\n";}





